= simple_form_for @pet do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :name
    = f.input :species
    = f.input :breed

    = f.association :store

  .form-actions
    = f.button :submit
